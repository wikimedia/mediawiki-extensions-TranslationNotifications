{
	"name": "mediawiki/translation-notifications",
	"description": "Manage communication with translators",
	"homepage": "https://www.mediawiki.org/wiki/Extension:TranslationNotifications",
	"license": "GPL-2.0-or-later",
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "33.0.0",
		"mediawiki/mediawiki-phan-config": "0.10.4",
		"mediawiki/minus-x": "1.1.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0"
	},
	"scripts": {
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"test": [
			"parallel-lint . --exclude node_modules --exclude vendor --exclude extensions",
			"phpcs -p -s",
			"minus-x check ."
		]
	}
}
