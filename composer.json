{
	"name": "mediawiki/translation-notifications",
	"type": "mediawiki-extension",
	"description": "Manage communication with translators",
	"homepage": "https://www.mediawiki.org/wiki/Extension:TranslationNotifications",
	"license": "GPL-2.0+",
	"require": {
		"composer/installers": "*",
		"mediawiki/translate": "dev-master"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9.2",
		"mediawiki/mediawiki-codesniffer": "0.10.1",
		"jakub-onderka/php-console-highlighter": "0.3.2"
	},
	"scripts": {
		"fix": "phpcbf",
		"test": [
			"parallel-lint . --exclude node_modules --exclude vendor --exclude extensions",
			"phpcs -p -s"
		]
	}
}
